<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.github.fengtan</groupId>
  <artifactId>solr-gui</artifactId>
  <version>0.3-SNAPSHOT</version>
  <name>solr-gui</name>
  <description></description>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      <plugin><!-- TODO redundant with maven-assembly-plugin -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <classpathPrefix>lib/</classpathPrefix>
              <mainClass>com.github.fengtan.solrgui.SolrGUI</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>com.github.fengtan.solrgui.SolrGUI</mainClass>
            </manifest>
          </archive>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id> <!-- this is used for inheritance merges -->
            <phase>package</phase> <!-- bind to the packaging phase -->
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <url>https://github.com/fengtan/solr-gui</url>
  <repositories>
    <repository>
      <id>nattable.core</id>
      <url>file://${project.basedir}/lib/org.eclipse.nebula.widgets.nattable.core_1.3.0.201503261201.jar</url>
    </repository>
  </repositories>
  <dependencies>
  	<dependency>
  		<groupId>org.apache.solr</groupId>
  		<artifactId>solr-solrj</artifactId>
  		<version>4.10.0</version>
  	</dependency>
  	<dependency>
      <groupId>ch.qos.logback</groupId><!-- needed ? -->
  		<artifactId>logback-classic</artifactId>
  		<version>1.1.2</version>
  	</dependency>
    <dependency>
      <groupId>commons-logging</groupId><!-- needed ? -->
      <artifactId>commons-logging</artifactId>
      <version>1.2</version>
      </dependency>
  	<dependency>
  		<groupId>org.apache.commons</groupId>
  		<artifactId>commons-lang3</artifactId>
  		<version>3.3.2</version>
  	</dependency>
    <dependency>
      <groupId>org.eclipse</groupId>
      <artifactId>jface</artifactId>
      <version>3.3.0-I20070606-0010</version>
    </dependency>
  	<dependency><!-- TODO linux -->
  		<groupId>org.eclipse.swt.gtk.linux</groupId>
  		<artifactId>x86_64</artifactId>
  		<version>3.3.0-v3346</version>
  	</dependency>
    <dependency>
      <groupId>nattable</groupId><!-- TODO drop this + lib/nattable when artifact available http://www.eclipse.org/nattable/download.php -->
      <artifactId>nattable.core</artifactId>
      <version>1.3.0</version>
    </dependency>
  </dependencies>
</project>
